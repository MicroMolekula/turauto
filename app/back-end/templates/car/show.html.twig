{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Car_vin</th>
                <td>{{ car.carVin }}</td>
            </tr>
            <tr>
                <th>Car_make</th>
                <td>{{ car.carMake }}</td>
            </tr>
            <tr>
                <th>Car_model</th>
                <td>{{ car.carModel }}</td>
            </tr>
            <tr>
                <th>Car_date_of_issue</th>
                <td>{{ car.carDateOfIssue ? car.carDateOfIssue|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Car_state_number</th>
                <td>{{ car.carStateNumber }}</td>
            </tr>
            <tr>
                <th>Cls_title</th>
                <td>{{ car.clsTitle }}</td>
            </tr>
            <tr>
                <th>Stn_id</th>
                <td>{{ car.stnId }}</td>
            </tr>
            <tr>
                <th>Car_body_type</th>
                <td>{{ car.carBodyType }}</td>
            </tr>
            <tr>
                <th>Car_color</th>
                <td>{{ car.carColor }}</td>
            </tr>
            <tr>
                <th>Car_status</th>
                <td>{{ car.carStatus }}</td>
            </tr>
            <tr>
                <th>Car_gearbox_type</th>
                <td>{{ car.carGearboxType }}</td>
            </tr>
            <tr>
                <th>Car_img</th>
                <td>{{ car.carImg }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}">back to list</a>

    <a href="{{ path('app_car_edit', {'car_vin': car.car_vin}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
